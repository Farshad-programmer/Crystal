{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "BUILD WITH CLANG COMPILER",
			"command": "clang++",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${fileDirname}\\Crystal.exe",
				"${workspaceFolder}\\src\\Core\\Engine.cpp",
				"-IC:\\C++Libraries\\SDL2-2.28.5\\x86_64-w64-mingw32\\include\\SDL2", 
				"-LC:\\C++Libraries\\SDL2-2.28.5\\x86_64-w64-mingw32\\lib", 
				"-lSDL2" 
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: clang++"
		},
		{
			"type": "cppbuild",
			"label": "BUILD WITH GCC COMPILER",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${fileDirname}\\Crystal.exe",
				"${workspaceFolder}\\src\\Core\\Engine.cpp",
				"-IC:\\C++Libraries\\SDL2-2.28.5\\x86_64-w64-mingw32\\include\\SDL2", 
				"-LC:\\C++Libraries\\SDL2-2.28.5\\x86_64-w64-mingw32\\lib", 
				"-lSDL2" 
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\mingw64\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "Build with MSVC",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/std:c++latest",
				"/EHsc",
				"/Fe:",
				"${fileDirname}\\Crystal.exe",
				"${workspaceFolder}\\*.cpp",
				"-IC:\\C++Libraries\\SDL2-2.28.5\\x86_64-w64-mingw32\\include\\SDL2", 
				"-LC:\\C++Libraries\\SDL2-2.28.5\\x86_64-w64-mingw32\\lib", 
				"-lSDL2" 
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "derleyici: cl.exe"
		}
	]
}
